{% extends 'base.html.twig' %}

{% block title %}Parcours{% endblock %}

{% block body %}
    <h1>Parcours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parcour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ parcour.name }}</td>
            </tr>
            <tr>
                <th>Society</th>
                <td>{{ parcour.society }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ parcour.startDate ? parcour.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ parcour.endDate ? parcour.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ parcour.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('parcours_index') }}">back to list</a>

    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}">edit</a>

    {{ include('parcours/_delete_form.html.twig') }}
{% endblock %}
